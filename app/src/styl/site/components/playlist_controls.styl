#loop-region{
	width: 100%;
	height: 100%;
}

.PlaylistItemControls{
 	position: relative;
 	width: 100%;
 	height: var(--s-playlist-controlsheight);
 	display: none;
 	background-color: var(--playlistitem-controlscolor);

 	.is-active &{
 		display: block;
 	}
}

.Controls{
	text-align: center;
 	font-size: var(--fs-playlist-controls);
}


.ControlsButton{
	//width: 50px;
	//height: var(--s-playlist-controlsheight);
}

.ControlsIcon{
	font-size: var(--fs-playlist-controlsicon);
	user-select: none;
	padding: 5px;
	color: var(--playlistitem-iconcolor);
	&:hover{
		color: var(--playlistitem-iconhovercolor);
	}
}

.ControlsLoop{
	height: 100%;
	width: 100px;
 	background-color: var(--playlistitem-loopcontrolscolor);
}
