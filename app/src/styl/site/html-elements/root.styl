/**
 * Root
 *
 * For categories, see:
 * https://developer.mozilla.org/en/docs/Web/Guide/HTML/HTML5/HTML5_element_list
 */

/**
 * Selection
 */
::selection {
  background: var(--color-gold);
  text-shadow: none;
}

/**
 * Universal
 */
*,
*::before,
*::after {
  box-sizing: border-box;
}

/**
 * html
 */
html {
  color: var(--color-white);
  font-family: var(--ff-proxima-reg);
  line-height: var(--root-line-height);
  height: 100%;
  overflow-y: scroll;
  -ms-touch-action: none;
  font-size: 100%;
  @media --small {
    font-size: 112.5%;
  }
  @media --medium {
    font-size: 127.5%;
  }
  @media --large {
    font-size: 137.5%;
  }
  @media --x-large {
    // font-size: 157.5%;
  }
  @media --xx-large {
    // font-size: 200.0%;
  }
}

.ie{
  user-select: none !important;
}

span, div{
  -webkit-font-smoothing: antialiased;
  -moz-font-smoothing: antialiased;
}
